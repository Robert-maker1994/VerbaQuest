{
	"display": "Node 22",
	"_version": "22.0.0",
	"compilerOptions": {
		"lib": ["es2023", "DOM"],
		"module": "nodenext",
		"target": "es2022",
		"moduleResolution": "nodenext",
		"outDir": "./dist",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"@verbaquest/types": ["../packages/types/types"]
		}
	},

	"exclude": ["node_modules"],
	"ts-node": {
		"files": true,
		"transpileOnly": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	}
}
