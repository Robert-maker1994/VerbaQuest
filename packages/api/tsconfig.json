{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,

    "sourceMap": true,
    "noEmit": false,
    "baseUrl": "./src",
    "paths": {
      "@verbaquest/types": ["../dist/types/*"]
    },
    "composite": true
  },
  "include": ["libs", "migrations", "utils", "./**.ts"],
  "exclude": ["node_modules"],
}