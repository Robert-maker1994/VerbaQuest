
FROM node:18-alpine

ARG USER
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ARG POSTGRES_DB
ARG DB_USER
ARG DB_PASSWORD
ARG DB_HOST
ARG DB_NAME
ARG PG_PORT

ENV USER=${USER}
ENV POSTGRES_USER=${POSTGRES_USER}
ENV POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
ENV POSTGRES_DB=${POSTGRES_DB}
ENV DB_USER=${DB_USER}
ENV DB_PASSWORD=${DB_PASSWORD}
ENV DB_HOST=${DB_HOST}
ENV DB_NAME=${DB_NAME}
ENV PG_PORT=${PG_PORT}


WORKDIR /app

COPY package.json ./

RUN npm install

COPY . .

EXPOSE 5001

CMD ["sh", "-c", "npm run seeder && npm run start"]