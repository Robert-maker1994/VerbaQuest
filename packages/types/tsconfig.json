{
	"compilerOptions": {
		"lib": ["es2022"],
		"module": "NodeNext",
		"target": "es2022",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node16"
	},
	"include": ["types/**/*"],
	"exclude": ["node_modules"]
}
