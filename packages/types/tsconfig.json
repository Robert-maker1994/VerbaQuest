{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "ESNext",
    "target": "es2022",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node" ,
    "preserveConstEnums": true,
   },
  "include": ["types/**/*"],
  "exclude": ["node_modules"]
}
