{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "../../dist/types",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}